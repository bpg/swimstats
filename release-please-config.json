{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "include-v-in-tag": true,
      "draft": false,
      "prerelease": false,
      "extra-files": [
        {
          "type": "json",
          "path": "frontend/package.json",
          "jsonpath": "$.version"
        }
      ],
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features",
          "hidden": false
        },
        {
          "type": "fix",
          "section": "Bug Fixes",
          "hidden": false
        },
        {
          "type": "perf",
          "section": "Performance",
          "hidden": false
        },
        {
          "type": "chore",
          "section": "Miscellaneous",
          "hidden": false
        }
      ]
    }
  }
}
